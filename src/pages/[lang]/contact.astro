---
import MainLayout from '@layouts/MainLayout.astro';
import { getStaticPaths, getI18nProps } from '@i18n/helperi18n';
import ContactComponent from '@components/contact/ContactComponent.astro';

export { getStaticPaths };

const { lang, t, title } = getI18nProps(Astro.params, 'contact');


// SEO - Contacto
const description = t('seo.contact.description');
const keyword = t('seo.contact.keywords');


// OG - Contacto
const ogTitle = t('seo.contact.title');
const ogDescription = t('seo.contact.ogDescription');
const ogImage = "https://lamevallar.splytin.com/images/og-home.jpg"; 
const ogURL = `https://lamevallar.splytin.com/${lang}/contact`;
const ogType = t('seo.contact.ogType');


---


<MainLayout 
  title={title} 
  lang={lang}
  description={description}
  keyword={keyword}
  ogTitle={ogTitle}
  ogDescription={ogDescription}
  ogImage={ogImage}
  ogURL={ogURL}
  ogType={ogType}
>

  <div class="section">

    <ContactComponent title={title}/>

  </div>

</MainLayout>