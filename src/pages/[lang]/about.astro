---
import MainLayout from '@layouts/MainLayout.astro';
import { getStaticPaths, getI18nProps } from '@i18n/helperi18n';
import AboutComponent from '@components/about/AboutComponent.astro';

export { getStaticPaths };

const { lang, t, title } = getI18nProps(Astro.params, 'about');


// SEO
const description = t('seo.about.description');
const keyword = t('seo.about.keywords');

// OG
const ogTitle = t('seo.about.title');
const ogDescription = t('seo.about.ogDescription');
const ogImage = "https://lamevallar.splytin.com/images/og-home.jpg";
const ogURL = `https://lamevallar.splytin.com/${lang}/about`;
const ogType = t('seo.about.ogType');



---

<MainLayout 
  title={title} 
  lang={lang}
  description={description}
  keyword={keyword}
  ogTitle={ogTitle}
  ogDescription={ogDescription}
  ogImage={ogImage}
  ogURL={ogURL}
  ogType={ogType}
>

  <div class="section">
    <AboutComponent title={title} />
  </div>
  
</MainLayout>
